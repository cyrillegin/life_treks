{
    "name": "life_treks",
    "private": true,
    "version": "1.0.0",
    "description": "Life Treks website",
    "repository": "https://github.com/cyrillegin/life_treks.git",
    "license": "MIT",
    "author": "Cyrille Gindreau",
    "scripts": {
        "start": "npm run buildDev & python server/server.py run",
        "buildDev": "npm run clean && npm run watch",
        "clean": "rm -fr static/dist/",
        "watch": "webpack --watch --progress --config ./webpack.dev.config.js",
        "webpack": "webpack --progress",
        "startProd": "npm run buildProd & python server/run.py run",
        "buildProd": "npm run clean && webpack --progress --config ./webpack.prod.config.js",
        "lint": "npm run htmllint & npm run scsslint & npm run eslint & npm run pythonlint",
        "htmllint": "./node_modules/.bin/htmlhint --config .htmlhintrc src",
        "scsslint": "./node_modules/.bin/sass-lint src '**/*.scss' -v -q",
        "eslint": "./node_modules/.bin/eslint src",
        "pythonlint": "find ./server -name '*.py' | xargs pep8 --max-line-length=200",
        "postinstall": "npm --prefix ./node_modules/node-sass/ run install && npm prune"
    },
    "dependencies": {
        "@uirouter/angularjs": "1.0.7",
        "angular": "1.6.6",
        "angular-animate": "1.6.6",
        "angular-aria": "1.6.6",
        "angular-route": "1.6.6",
        "bootstrap": "3.3.7",
        "d3": "4.10.2",
        "jquery": "3.2.1",
        "three": "0.87.1",
        "require": "2.4.20"
    },
    "devDependencies": {
        "autoprefixer": "7.1.4",
        "babel-cli": "6.26.0",
        "babel-core": "6.26.0",
        "babel-loader": "7.1.2",
        "babel-plugin-angularjs-annotate": "0.8.2",
        "babel-preset-env": "1.6.0",
        "babel-eslint": "8.0.1",
        "babel-preset-es2015": "6.24.1",
        "css-loader": "0.28.7",
        "csslint": "1.0.5",
        "eslint": "4.8.0",
        "eslint-plugin-import": "2.7.0",
        "exports-loader": "0.6.4",
        "extract-text-webpack-plugin": "3.0.0",
        "file-loader": "1.1.4",
        "htmlhint": "0.9.13",
        "html-loader": "0.5.1",
        "imports-loader": "0.7.1",
        "less": "2.7.2",
        "less-loader": "4.0.5",
        "node-sass": "4.5.3",
        "precss": "2.0.0",
        "postcss-loader": "2.0.6",
        "sass-lint": "1.11.1",
        "sass-loader": "6.0.6",
        "style-loader": "0.18.2",
        "uglifyjs-webpack-plugin": "0.4.6",
        "url-loader": "0.5.9",
        "webpack": "3.6.0",
        "webpack-bundle-analyzer": "2.9.0"
    }
}
